{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Life Expectancy at Age 15, 1751 - 2100", "color": "#03034B", "fontSize": 20},
  "width": 800,
  "height": 500,
  "background": "#E0DDD6",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#A8C6DF"}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#B8D1E3", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/WendySun775/FIT3179-Data_visualisation_02/main/VisFolder/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"},
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Country"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/WendySun775/FIT3179-Data_visualisation_02/main/Data/Filtered_Cleaned_Life_Expectancy_at_15.csv"
      },
      "mark": "geoshape",
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/WendySun775/FIT3179-Data_visualisation_02/main/VisFolder/ne_110m_admin_0_countries.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME",
            "fields": ["geometry"]
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == selectedYear"
        }
      ],
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Life expectancy at 15",
          "type": "quantitative",
          "legend": {
            "title": "Life Expectancy (Years)",
            "orient": "bottom",
            "gradientLength": 800,
            "labelColor": "#03034B",
            "labelFontSize": 12,
            "titleColor": "#03034B",
            "titleFontSize": 15
          },
          "scale": {"domain": [40, 90], "range": ["#E7E1C7", "#97AD3D", "#334172"]}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Life expectancy at 15", "type": "quantitative", "title": "Life Expectancy at 15"}
        ]
      }
    },
    {
      "data": {"values": [{"text": "Life expectancy at age 15 refers to the average number of years a fifteen-year-old would live if age-specific mortality rates in"}]},
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": -390,
        "dy": -260,
        "color": "#777777",
        "fontSize": 13
      },
      "encoding": {
        "text": {"field": "text", "type": "nominal"}
      }
    },
    {
      "data": {"values": [{"text": "the current year were to stay the same throughout their life. From 2022 onwards, the UN mid-variant projections are shown."}]},
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": -390,
        "dy": -240,
        "color": "#777777",
        "fontSize": 13
      },
      "encoding": {
        "text": {"field": "text", "type": "nominal"}
      }
    }
  ],
  "params": [
    {
    "name": "selectedYear",
    "value": 2100,
    "bind": {
      "input": "range",
      "min": 1751,
      "max": 2100,
      "step": 1,
      "name": "Year"
    }
  }
  ]
}
