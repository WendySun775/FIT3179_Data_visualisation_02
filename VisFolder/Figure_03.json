{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Inequality in Life Expectancy vs. Health Expenditure Per Capita, 2020",
    "color": "#03034B",
    "fontSize": 20
  },
  "background": "#E0DDD6",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/WendySun775/FIT3179-Data_visualisation_02/main/Data/Merged_CHE_with_Index_2020.csv"
  },
  "selection": {
    "regionFilter": {
      "type": "single",
      "fields": ["Region"],
      "bind": {
        "input": "select",
        "options": [null, "Africa", "Americas", "Eastern Mediterranean", "Europe", "South-East Asia", "Western Pacific"],
        "name": "Select Region"
      }
    }
  },
  "transform": [{
    "filter": {
      "selection": "regionFilter"
    }
  }],
  "mark": {
    "type": "point",
    "filled": true,
    "size": 80
  },
  "encoding": {
    "x": {
      "field": "Current health expenditure per capita, PPP",
      "type": "quantitative",
      "title": "Health Expenditure per Capita (PPP)",
      "axis": {
        "labelColor": "#03034B",
        "titleColor": "#03034B",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "y": {
      "field": "Inequality in life expectancy (Atkinson index)",
      "type": "quantitative",
      "title": "Inequality in Life Expectancy (Atkinson Index)",
      "axis": {
        "labelColor": "#03034B",
        "titleColor": "#03034B",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "domain": ["Africa", "Americas", "Eastern Mediterranean", "Europe", "South-East Asia", "Western Pacific"],
        "range": ["#106FAD", "#EEAE0F", "#fdfeea", "#984ea3", "#065735", "#ffff33"]
        }
    },
    "tooltip": [{
        "field": "Country",
        "type": "nominal"
      },
      {
        "field": "Current health expenditure per capita, PPP",
        "type": "quantitative"
      },
      {
        "field": "Inequality in life expectancy (Atkinson index)",
        "type": "quantitative"
      }
    ]
  }
}
