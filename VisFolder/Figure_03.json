{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Inequality in Life Expectancy vs. Health Expenditure Per Capita, 2020",
    "color": "#03034B",
    "fontSize": 20
  },
  "background": "#E0DDD6",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/WendySun775/FIT3179_Data_visualisation_02/main/Data/Merged_CHE_with_Index_2020_cleaned.csv"
  },
  "params": [
    {
      "name": "regionFilter",
      "value": "Show All",
      "bind": {
        "input": "select",
        "options": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Select Region"
      }
    }
  ],
  "transform": [
    {
      "filter": "regionFilter == 'Show All' || datum.Region == regionFilter"
    },
    {
      "calculate": "datum['Population (in thousands)']", 
      "as": "Population"
    }
  ],
  "mark": {
    "type": "point",
    "filled": true
  },
  "encoding": {
    "x": {
      "field": "Current health expenditure per capita, PPP",
      "type": "quantitative",
      "title": "Health Expenditure per Capita (PPP)",
        "scale": {"type": "log",
                  "domain": [10, 15000]},
      "axis": {
        "labelColor": "#03034B",
        "titleColor": "#03034B",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "y": {
      "field": "Inequality in life expectancy (Atkinson index)",
      "type": "quantitative",
      "title": "Inequality in Life Expectancy (Atkinson Index)",
      "axis": {
        "labelColor": "#03034B",
        "titleColor": "#03034B",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [100, 1000, 10000, 100000, 500000, 1500000],
        "range": [10, 50, 150, 300, 500, 750, 1000]
      },
      "legend": {
        "format": ".1s"
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "domain": ["Africa", "Americas", "Eastern Mediterranean", "Europe", "South-East Asia", "Western Pacific"],
        "range": ["#413839", "#8f2d10", "#ffffff", "#1c107a", "#DAA520", "#4F7942"]
      }
    },
    "tooltip": [
      {
        "field": "Country",
        "type": "nominal"
      },
      {
        "field": "Current health expenditure per capita, PPP",
        "type": "quantitative"
      },
      {
        "field": "Inequality in life expectancy (Atkinson index)",
        "type": "quantitative"
      },
      {
        "field": "Population (in thousands)",
        "type": "quantitative",
        "format": ","
      }
    ]
  }
}
